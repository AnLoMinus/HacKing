  home=$HOME
else
  home="~/"
fi

# checking for system bin dir
if [ -d /data/data/com.termux/files/usr/bin ]; then
  bin="/data/data/com.termux/files/usr/bin"
elif [ -d /usr/local/bin ]; then
  bin="/usr/local/bin"
elif [ -d /bin ]; then
  bin="/bin"
elif [ -d /sbin ]; then
  bin="/sbin"
fi

# checking for configuration dir
if [ -d /data/data/com.termux/files/usr/etc ]; then
  conf_dir="/data/data/com.termux/files/usr/etc"
elif [ -d ./data ]; then
  conf_dir="../"
fi

# configuration files
if [ -d $conf_dir/HacKing ]; then
  if [ -e $conf_dir/HacKing/data/tools.dat ]; then
    tools_data="$conf_dir/HacKing/data/tools.dat"
  fi
  if [ -e $conf_dir/HacKing/data/category.dat ]; then
    category_data="$conf_dir/HacKing/data/category.dat"
  fi
else
  if [ -e data/tools.dat ]; then
    tools_data="data/tools.dat"
  fi
  if [ -e data/category.dat ]; then
    category_data="data/category.dat"
  fi
fi

# checking for system root access
if [ `command -v sudo` ]; then
  sudo="sudo"
else
  sudo=""
fi

# checking for system package manager
if [ -e /data/data/com.termux/files/usr/bin/pkg ]; then
  pac="pkg"
  system="termux"
elif [ `command -v apt` ]; then
  pac="apt"
  system="linux"
elif [ `command -v apt-get` ]; then
  pac="apt-get"
  system="linux"
elif [ `command -v apk` ]; then
  pac="apk"
  system="linux"
elif [ `command -v yum` ]; then
  pac="yum"
  system="fedora"
elif [ `command -v brew` ]; then
  pac="brew"
  system="mac"
  sudo=""
fi

menu() {
  while true; do
    clear
    Banner
    tools=`grep -n '.' $tools_data | wc -l`
    # echo "$logo"
    echo "\t ${c1} ${cafe} All Tools" ${red}[${purple}$tools${red} ]
    echo "\n\t ${c2} ${cafe} PrivEscLinux"
    echo "\t ${c3} ${cafe} Categories"
    echo "\t ${c4} ${cafe} Update"
    echo "\t ${c5} ${cafe} About\n"
    echo "\t ${cx} ${cafe} Exit\n"
    echo "  $prompt "
    read cmd
    case ${cmd} in
      1)
        all_tools
      ;;
      2)
        privEscLinux
      ;;
      3)
        category
      ;;
      4)
        update
      ;;
      5)
        about
      ;;
      x|0|00|exit|Exit)
        echo "${cafe}Exiting ...."
        clear
        exit
      ;;
      *)
        echo "${red}${cmd}: ${purple}invalid option!!${nc}"
        sleep 1
      ;;
    esac
  done
}

VPrivEsc="\n$red[$green+$red]$cyan Priviledge Escalation $red[$green+$red]\n"

# unix-privesc-check: Shell script to check for simple privilege escalation vectors on Unix systems

# Unix-Privilege-Escalation-Exploits-Pack: Exploits for getting local root on Linux, BSD, AIX, HP-UX, Solaris, RHEL, SUSE etc.

# uptux: Specialized privilege escalation checks for Linux systems.

privEscLinux() {
  while true; do
    clear
    Banner2
    echo "\t ${c1} ${cafe} AutoLocalPrivilegeEscalation:$cyan An automated script that download potential exploit for linux kernel from exploitdb, and compile them automatically."
    echo "\t ${c2} ${cafe} BeRoot:$cyan BeRoot Project is a post exploitation tool to check common misconfigurations to find a way to escalate our privilege. exploits."
    echo "\t ${c3} ${cafe} LinEnum:$cyan Scripted local Linux enumeration & privilege escalation checks"
    echo "\t ${c4} ${cafe} LinPEAS:$cyan Linux Privilege Escalation Awesome Script"
    echo "\t ${c5} ${cafe} Linux Exploit Suggester 2:$cyan Exploit suggester based on Linux_Exploit_Suggester"
    echo "\t ${c6} ${cafe} Linux Exploit Suggester:$cyan based on operating system release number."
    echo "\t ${c7} ${cafe} Linux Kernel Exploits"
    echo "\t ${c8} ${cafe} Linux PrivChecker:$cyan locally Linux enumerate system info, common privilege escalation, world writable files, misconfigurations, clear-text passwords and applicable exploits."
    echo "\t ${c9} ${cafe} Linux Smart Enumeration:$cyan Linux enumeration tools for pentesting and CTFs"
    echo "\t ${c10} ${cafe} Linux Soft Exploit Suggester:$cyan Linux enumeration tools for pentesting and CTFs"
    echo "\t ${c11} ${cafe} PrivEsc:$cyan collection of Windows, Linux and MySQL privilege escalation scripts and exploits."
    echo "\t ${c12} ${cafe} Lynis:$cyan Security auditing based on UNIX like$green Linux, macOS, BSD, and others."
    echo "\t ${c13} ${cafe} Pspy:$cyan Unprivileged Linux process snooping"
    echo "\t ${c14} ${cafe} Traitor:$cyan Automatically exploit low-hanging fruit to pop a root shell. Linux privilege escalation made easy!"
    echo "\t ${c15} ${cafe} Unix Privesc Check:$cyan Check for simple privilege escalation vectors on Unix systems"
    echo "\t ${c16} ${cafe} Unix Privilege Escalation Exploits Pack:$cyan Exploits for getting local root on$green Linux, BSD, AIX, HP-UX, Solaris, RHEL, SUSE etc."
    echo "\t ${c17} ${cafe} Uptux:$cyan Specialized privilege escalation checks for Linux systems."
    echo "\t ${c18} ${cafe} Cover My Ass:$cyan Cover your tracks on UNIX systems."
    echo "\t ${cx} ${cafe} Back\n"
    echo "  $prompt "
    read cmd
    case ${cmd} in
      1)
        echo "${cafe} AutoLocalPrivilegeEscalation:$cyan An automated script that download potential exploit for linux kernel from exploitdb, and compile them automatically."
        sh PrivEsc/Linux/AutoLocalPrivilegeEscalation/auto_priv_exploit.sh
        sleep 5
      ;;
      2)
        echo "${cafe}BeRoot ....${nc}"
        python PrivEsc/Linux/BeRoot/Linux/beroot.py
        sleep 5
      ;;
      3)
        echo "${cafe}LinEnum ....${nc}"
        sh PrivEsc/Linux/Enumeration/LinEnum.sh
        sleep 5
      ;;
      4)
        echo "${cafe}LinPEAS ....${nc}"
        sleep 5
      ;;
      5)
        echo "${cafe}Linux Priviledge Checker ....${nc}"
        sleep 5
      ;;
      6)
        echo "${cafe}Linux Smart Enumeratin ....${nc}"
        sleep 5
      ;;
      7)
        echo "${cafe}Macgic Recon ....${nc}"
        sleep 5
      ;;
      8)
        echo "${cafe}Expliot Suggester ....${nc}"
        sleep 5
      ;;
      9)
        echo "${cafe}Exiting ....${nc}"
        sleep 5
      ;;
      10)
        echo "${cafe}Exiting ....${nc}"
        sleep 5
      ;;
      11)
        echo "${cafe}Exiting ....${nc}"
        sleep 5
      ;;
      12)
        echo "${cafe}AutoLocalPrivilegeEscalation ....${nc}"
      ;;
      13)
        echo "${cafe}BeRoot ....${nc}"
        # python PrivEsc/Linux/Enumeration/SUID3NUM/suid3num.py
      ;;
      14)
        echo "${cafe}LinEnum ....${nc}"
      ;;
      15)
        echo "${cafe}LinPEAS ....${nc}"
        sleep 5
      ;;
      16)
        echo "${cafe}Linux Priviledge Checker ....${nc}"
        sleep 5
      ;;
      17)
        echo "${cafe}Linux Smart Enumeratin ....${nc}"
        sleep 5
      ;;
      18)
        echo "${cafe}Macgic Recon ....${nc}"
        sleep 5
      ;;
      0|00|x|exit|Exit)
        echo "${cafe}Exiting ....${nc}"
        break
      ;;
      *)
        echo "${red}${cmd}: ${purple}invalid option!!${nc}"
        sleep 1
      ;;
    esac
  done
}


# install tools
install() {
  # get tool alias name
  tool_name=`grep '.' $tools_data | sort -f | sed -n "$1p" | cut -d"|" -f1`
  # get tool package manager
  tool_installer=`grep '.' $tools_data | sort -f | sed -n "$1p" | cut -d"|" -f5`
  # tool dependency (requirements)
  tool_dependency=`grep '.' $tools_data | sort -f | sed -n "$1p" | cut -d"|" -f6 | tr ' ' ','`
  # tool url
  tool_url=`grep '.' $tools_data | sort -f | sed -n "$1p" | cut -d"|" -f4`
  # package name or tool name
  tool_pac=`grep '.' $tools_data | sort -f | sed -n "$1p" | cut -d"|" -f2`

  # check tool name is null or not
  if [ "$tool_name" ]; then

    case $tool_installer in

    # for default package
    package_manager)
      # check tool is already installed or not
      if [ ! `command -v $tool_pac` ]; then
        # check sudo is null or not
        if [ $sudo ]; then
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $sudo $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_pac != "" -a $tool_pac != "null" ]; then
              $sudo $pac install $tool_pac -y
            fi
          else
            echo "${red}Sorry you are offline !!${nc}"
          fi
        else
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_pac != "" -a $tool_pac != "null" ]; then
              $pac install $tool_pac -y
            fi
          else
            echo "${red}Sorry ${nc}: you are ${red} offline ${nc}!!"
          fi
        fi
        # check tool is installed or not
        if [ ! `command -v $tool_pac` ]; then
          echo "${red}Sorry ${nc}: '$tool_name' ${red} is not installed !!${nc}"
        else
          echo "${nc}'$tool_name' ${nc}: ${cafe} is installed successfully !!${nc}"
        fi
      else
        echo "${red}Sorry ${nc}: '$tool_name' ${cafe} is already installed !!${nc}"
      fi
    ;;
    # for github tools
    git)
      # check tool is already installed or not
      if [ ! -e "./$tool_pac" ]; then
        # check sudo is null or not
        if [ $sudo ]; then
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $sudo $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_url != "" -a $tool_url != "null" ]; then
              $sudo git clone $tool_url ~/$tool_name
            fi
          else
            echo "${red}Sorry you are offline !!${nc}"
          fi
        else
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_url != "" -a $tool_url != "null" ]; then
              git clone $tool_url ~/$tool_name
            fi
          else
            echo "${red}Sorry ${nc}: you are ${red} offline ${nc}!!${nc}"
          fi
        fi
        # check tool is installed or not
        if [ ! -e "./$tool_pac" ]; then
          echo "${red}Sorry ${nc}: '$tool_name' ${red} is not installed !!${nc}"
        else
          echo "${purple}'$tool_name' ${cafe} is installed successfully !!${nc}"
        fi
      else
        echo "${red}Sorry ${nc}: '$tool_name' ${cafe} is already installed !!${nc}"
      fi
    ;;
    # for curl tools
    curl)
      # check tool is already installed or not
      if [ ! -e "./$tool_pac" ]; then
        # check sudo is null or not
        if [ $sudo ]; then
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $sudo $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_url != "" -a $tool_url != "null" ]; then
              $sudo curl -o "./$tool_pac" $tool_url
            fi
          else
            echo "${red}Sorry you are offline !!${nc}"
          fi
        else
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_url != "" -a $tool_url != "null" ]; then
              curl -o "./$tool_pac" $tool_url
            fi
          else
            echo "${red}Sorry ${nc}: you are ${red} offline ${nc}!!${nc}"
          fi
        fi
        # check tool is installed or not
        if [ ! -e "./$tool_pac" ]; then
          echo "${red}Sorry ${nc}: '$tool_name' ${red} is not installed !!${nc}"
        else
          echo "${nc}'$tool_name' ${nc}: ${cafe} is installed successfully !!${nc}"
        fi
      else
        echo "${red}Sorry ${nc}: '$tool_name' ${cafe} is already installed !!${nc}"
      fi
    ;;
    # for wget tools
    wget)
      # check tool is already installed or not
      if [ ! -e "./$tool_pac" ]; then
        # check sudo is null or not
        if [ $sudo ]; then
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $sudo $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_url != "" -a $tool_url != "null" ]; then
              $sudo wget $tool_url -o "./$tool_pac"
            fi
          else
            echo "${red}Sorry you are offline !!${nc}"
          fi
        else
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
            echo "${cafe}Installing ...${nc}"
            sleep 1
            # install tool dependency
            if [ $tool_dependency != "null" ]; then
              for dep_name in `echo $tool_dependency | tr ',' ' '`; do
                # installing dependency
                if [ ! `command -v $dep_name` ]; then
                  $pac install $dep_name -y
                fi
              done
            fi
            # installing tools
            if [ $tool_url != "" -a $tool_url != "null" ]; then
              wget $tool_url -o "./$tool_pac"
            fi
          else
            echo "${red}Sorry ${nc}: you are ${red} offline ${nc}!!${nc}"
          fi
        fi
        # check tool is installed or not
        if [ ! -e "./$tool_pac" ]; then
          echo "${red}Sorry ${nc}: '$tool_name' ${red} is not installed !!${nc}"
        else
          echo "${nc}'$tool_name' ${nc}: ${cafe} is installed successfully !!${nc}"
        fi
      else
        echo "${red}Sorry ${nc}: '$tool_name' ${cafe} is already installed !!${nc}"
      fi
    ;;

    # for any new installer
    # put here
    esac
  fi
  # wait for user any input
  echo "$prompt "
  read tmp_inp
}

# install category tools
install_category_tool() {
  # get tool alias name
  tool_name=`grep '.' $tools_data | sort -f | sed -n "/$1/p" | sed -n "$2 p" | cut -d"|" -f1`
  # get tools package manager
  tool_installer=`grep '.' $tools_data | sort -f | sed -n "/$1/p" | sed -n "$2 p" | cut -d"|" -f5`
  # tool dependency (requirements)
  tool_dependency=`grep '.' $tools_data | sort -f | sed -n "/$1/p" | sed -n "$2 p" | cut -d"|" -f6 | tr ' ' ','`
  # tool url
  tool_url=`grep '.' $tools_data | sort -f | sed -n "/$1/p" | sed -n "$2 p" | cut -d"|" -f4`
  # package name or tool name
  tool_pac=`grep '.' $tools_data | sort -f | sed -n "/$1/p" | sed -n "$2 p" | cut -d"|" -f2`

  # check tool name is null or not
  if [ "$tool_name" ]; then

    case $tool_installer in

    # for default package
    package_manager)
      # check tool is already installed or not
      if [ ! `command -v $tool_pac` ]; then
        # check sudo is null or not
        if [ $sudo ]; then
          #check user is online or not
          wget -q --spider http://google.com
          if [ $? -eq 0 ]; then
